<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="#009988"
    android:layout_height="wrap_content">

    <ImageView
        android:background="@color/fondo_editor"
        android:id="@+id/image_ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/caption_ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_ver"
        android:layout_centerHorizontal="true"
        android:background="@color/fondo_editor"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center_horizontal"
        android:hint="@string/pie_de_foto"
        android:padding="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/fondos"
        android:textColorHint="@color/fondos"
        android:textSize="14sp" />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/image_uploading_progress_bar_ver"
        android:background="@drawable/image_uploading_progress_bar"
        android:layout_centerInParent="true"
        android:layout_width="48dp"
        android:padding="4dp"
        android:layout_height="48dp" />



</RelativeLayout>