<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaPaginaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_alignParentTop="true">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldTitulo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/titulo">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />



        </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/boton_publicar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/fondo_boton"
                android:fontFamily="@font/arvo"
                android:textColor="@color/texto_boton"
                android:text="Publicar"
                app:backgroundTint="@color/fondo_boton" />

        </LinearLayout>



        <com.example.universebuilder.markeditor.EditorControlBar
            android:id="@+id/controlBar"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="48dp" />


        <ScrollView
            android:id="@+id/scrollEditor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/controlBar"
            android:layout_below="@+id/linearTitulo"
>

            <com.example.universebuilder.markeditor.MarkDEditor
                android:id="@+id/mdEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>




    </RelativeLayout>




</FrameLayout>