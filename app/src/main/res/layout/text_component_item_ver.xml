<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/indicator_ver"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="1"
        android:fontFamily="@font/roboto_slab"
        android:background="@color/fondo_editor"
        android:textColor="@color/fondos"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fondos"
        android:background="@drawable/blockquote_component_bg"
        android:backgroundTint="@color/fondo_editor"
        android:fontFamily="@font/roboto_slab"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="16dp"
        android:textColorHint="@color/fondos"
        android:textSize="16sp" />

</LinearLayout>